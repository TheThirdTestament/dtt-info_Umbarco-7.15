@inherits Umbraco.Web.Mvc.UmbracoTemplatePage
@{
    Layout = null;
    var logo = Umbraco.TypedMedia(Model.Content.GetPropertyValue<int>("logo", recurse: true));
}
<!doctype html>
<head>
    <!-- Global site tag (gtag.js) - Google Analytics -->
    <script async src="https://www.googletagmanager.com/gtag/js?id=UA-120736505-1"></script>
    <script>
        window.dataLayer = window.dataLayer || [];
        function gtag() { dataLayer.push(arguments); }
        gtag('js', new Date());
        gtag('config', 'UA-120736505-1');
    </script>

    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge,chrome=1">
    <meta name="viewport" content="width=device-width, initial-scale=1.0, maximum-scale=1.0, user-scalable=no">
    <meta name="description" content="@Umbraco.Field("metaDescription", recursive: true)">

    <link href="https://fonts.googleapis.com/css?family=Lora|Montserrat|Open+Sans&display=swap" rel="stylesheet">
    @*@Styles.Render("~/bundles/style")*@


    <link href="~/Content/bootstrap.min.css" rel="stylesheet" />
    <link href="~/Content/css/style.css" rel="stylesheet" />
    <link href="~/Content/css/RTE.css" rel="stylesheet" />


    <meta name="viewport" content="width=device-width, initial-scale=1.0, maximum-scale=1.0, user-scalable=no">
    @if (@Umbraco.Field("metaTitle", recursive: true).ToString().Length > 4)
    {
        <title>@Umbraco.Field("metaTitle", recursive: true) | Det Tredie Testamente</title>
    }
    else if (Umbraco.Field("pageName").ToString().Length > 4)
    {
        <title>@Umbraco.Field("pageName") | Det Tredie Testamente</title>
    }



</head>
<body class="site">
    <div class="container main" id="wrap">
        <header class="wrapper clearfix">
            <a id="header" href="\" style="display:block; white-space: nowrap;">
                <div class="row">

                    <div class="col-md-3 col-sm-3" id="logo">
                        @if (logo != null)
                        {
                            <img src="@logo.Url" alt="logo" />
                        }
                    </div>
                    <div class="col-md-6 col-sm-9 center-content">
                        <div id="site-title">@Umbraco.Field("siteTitle", recursive: true)</div>
                        <div id="site-sub-title">@Umbraco.Field("subSiteTitle", recursive: true)</div>

                    </div>
                    <div class="col-md-3">
                    </div>

                </div>
            </a>

            <nav class="navbar navbar-expand-lg navbar-light bg-light">
                <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>

                <!-- Collect the nav links, forms, and other content for toggling -->
                <div class="collapse navbar-collapse" id="navbarSupportedContent">
                    @Umbraco.RenderMacro("mainMenu")
                </div><!-- /.navbar-collapse -->

            </nav>
        </header>

        <!-- main content -->
        <div class="main-content">
            @RenderBody()
        </div>



    </div> <!-- /.container -->

    <footer class="footer">
        <div class="container">
            <div class="row">
                <div class="col-md-3">
                    @Umbraco.Field("contactInfo", recursive: true)
                </div>
                <div class="col-md-3">
                    @Umbraco.Field("contact", recursive: true)
                </div>
                <div class="col-md-3">
                    @Umbraco.Field("about", recursive: true)
                </div>
                <div class="col-md-3">
                    @Umbraco.Field("follow", recursive: true)
                </div>
            </div>
        </div>
    </footer>
    <script defer src="~/Scripts/jquery-3.0.0.min.js"></script>
    <script defer src="~/Scripts/bootstrap.min.js"></script>
    <script defer src="https://use.fontawesome.com/releases/v5.0.6/js/all.js"></script>
</body>
</html>